 /* play music after unlock (browser rule) */
 document.getElementById("bgMusic").play();
}

/* drag cloud */
let dragging=null;
document.querySelectorAll(".cloud").forEach(c=>{
 c.onmousedown=()=>dragging=c;
});
document.onmouseup=()=>dragging=null;

let rainCount=0;

document.onmousemove=(e)=>{
 if(dragging){
   dragging.style.top=e.clientY+"px";
   if(e.clientY>220) rain(e.clientX, dragging.id);
 }
};

/* rain */
function rain(x, cloudId){
 for(let i=0;i<80;i++){
  let d=document.createElement("div");
  d.className="drop";
  d.style.left=(x+Math.random()*120-60)+"px";
  d.style.animationDuration=(Math.random()*0.6+0.6)+"s";
  document.body.appendChild(d);
  setTimeout(()=>d.remove(),900);
 }
 rainCount++;
 showMsg(cloudId);
}

/* messages per cloud */
function showMsg(cloudId){
