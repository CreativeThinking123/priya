<script>
/* stars */
for(let i=0;i<150;i++){
 let s=document.createElement("div");
 s.className="star";
 s.style.left=Math.random()*100+"vw";
 s.style.top=Math.random()*100+"vh";
 document.body.appendChild(s);
}

/* unlock */
function checkAnswer(){
 let ans=document.getElementById("answer").value.toLowerCase().trim();
 if(ans==="family") unlock();
 else document.getElementById("hint").innerText="Hint: Not friendâ€¦ closer than that ğŸ’›";
}

function unlock(){
 document.getElementById("center").innerHTML=`
 <h2>Hey Priya ğŸ’›</h2>
 <p>Letâ€™s slow down togetherâ€¦</p>
 <div class="breath"></div>
 <p>Breathe inâ€¦ breathe outâ€¦</p>
 <small>Pull a cloud and let rain carry heaviness away â˜ï¸ğŸŒ§ï¸</small>
